{
  "name": "hotsource/wppm",
  "description": "Package Manager for WordPress",
  "type": "library",
  "require": {
      "php": "^5.3.3 || ^7.0",
      "composer/composer": "~1.2.2",
      "composer/installers": "*"
  },

  "extra": {
    "installer-paths": {
      "/var/www/wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "autoload": {
    "psr-4": { "WPPM\\": "src/WPPM" }
  },
